# API Keys
SCOPUS_API_KEY="<YOUR_SCOPUS_KEY>"
SCOPUS_API_URL="<YOUR_SCOPUS_API_URL>"

# API Settings
REQUEST_TIMEOUT=30               # Overall request timeout in seconds
MAX_RESULTS_PER_REQUEST=100      # Maximum results to return per API call
RETRY_COUNT=3                    # Number of retry attempts for failed requests
RETRY_BACKOFF=1.5                # Exponential backoff factor for retries
CONNECT_TIMEOUT=10               # Timeout for establishing connection in seconds
USER_AGENT="Literator/1.0"       # User agent string for API requests
RATE_LIMIT_PAUSE=1.0             # Seconds to pause between API requests

# Storage Settings
VAULT_PATH="<PATH_TO_YOUR_VAULT_DIRECTORY>"  # Optional: Defaults to ./vault if not specified

# Database Settings
DB_ECHO=False    # Set to True for SQL query logging
DB_POOL_SIZE=5   # Connection pool size
DB_MAX_OVERFLOW=10  # Maximum overflow connections